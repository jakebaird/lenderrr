%nav#sticker.navbar.navbar-default.navbar-static-top.navbar-lg{role: "navigation"}
  .container
    .navbar-header.centerMrgn
      %button.navbar-toggle{"data-target" => "#navbar-collapse-01", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
      = link_to "Lenderrr", root_path, class: "navbar-brand", "data-easing" => "easeOutQuint", "data-scroll" => "", "data-scroll" => "", "data-speed" => "2000", "data-url" => "true"

    #navbar-collapse-01.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %a{"data-toggle" => "dropdown", :href => "#", 'data-class' => 'dropdown', 'role' => 'button', 'aria-expanded' => true}
              = current_user.username
              %span.caret
            %span.dropdown-arrow
            %ul.dropdown-menu
              %li= link_to 'Sign Out', destroy_user_session_path, method: :destroy

        - else
          %li
            %a.popup-text{"data-effect" => "mfp-move-from-top", "data-target" => "#signup", "data-toggle" => "modal", href: "#login-dialog"} Login
          %li
            %a.popup-text{"data-effect" => "mfp-move-from-top", "data-target" => "#login", "data-toggle" => "modal", href: "#login-dialog"} Sign up


#signup.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} ×
          %span.sr-only Close
        %h4#myModalLabel.modal-title Member Login
      .modal-body
        .row-fluid
          = render 'devise/sessions/new'

#login.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} ×
          %span.sr-only Close
        %center
          %h4#myModalLabel.modal-title Welcome To Lenderrr
          %br/
          = link_to "Login With Facebook", user_omniauth_authorize_path(:facebook), class: 'btn btn-success btn-lg'
      .modal-body
        .row
          .col-md-6
            %h6 Regsister
            %p
              = render 'devise/registrations/new'
          .col-md-6
            %h6 Login
            %p
              = render 'devise/sessions/new'

        .row-fluid

