- model_class = Item
.page-header
  %h1= t '.title', :default => Item
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:terms_and_conditions)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        %td= item.name
        %td= item.location
        %td= item.price
        %td= item.description
        %td= item.terms_and_conditions
        %td= l item.created_at, format: :long
        %td
          = link_to item_path(item), class: 'btn btn-warning', title: "#{ t('.show', default: t('helpers.links.show')) }" do
            %i.fa.fa-edit
            pencil
          = link_to item_path(item), method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger', title: "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            %i.fa.fa-trash-o.fa-lg
            Delete

= link_to t('.new', :default => t("helpers.links.new")), new_item_path, class: 'btn btn-primary'
