= form_for @item, html: { class: 'form-horizontal form-model' } do |f|
  .form-group
    = f.label :name, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, class: 'text-field form-control', placeholder: 'Name'
  .form-group
    = f.label :location, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :location, class: 'text-field form-control', placeholder: 'Location'
  .form-group
    = f.label :price, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :price, class: 'text-field form-control', placeholder: 'Price'
  .form-group
    = f.label :description, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :description, class: 'text-field form-control', placeholder: 'Description'
  .form-group
    = f.label :terms_and_conditions, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :terms_and_conditions, class: 'text-field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), items_path, class: 'btn btn-default'                      |